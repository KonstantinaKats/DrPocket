<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="70dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.katsigianni.pocketlocation.Activities.LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/splash"
    android:weightSum="1">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logotr"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=" Patient Sign in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginLeft="0dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:ems="10"
        android:id="@+id/surname"
        android:textSize="20dp"
        android:hint="Surname"
        android:layout_above="@+id/AMKA"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginLeft="0dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:ems="10"
        android:id="@+id/AMKA"
        android:textSize="20dp"
        android:hint="AMKA"
        android:layout_above="@+id/Loginbut"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp" />

    <Button
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:id="@+id/Loginbut"
        android:text="Log in"
        android:layout_marginLeft="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_above="@+id/signupbut"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="26dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="No account?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add"
        android:textSize="12sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_above="@+id/signupbut"
        android:layout_alignParentStart="true" />


    <Button
        android:text="Register"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:id="@+id/signupbut"
        android:background="#2176F3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
